@model GoogleCalendar_MVC.Models.ViewModels.EventVM
@{
    ViewBag.Title = "Create new Event";
}

<br />
<h2 class="text-info">Edit Event</h2>
<br />

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button type="button" class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Event infomation
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Summary"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Summary" class="form-control" />
                    </div>
                    <span asp-validation-for="Summary" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Start"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Start" class="form-control" />
                    </div>
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="End"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="End" class="form-control" />
                    </div>
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header" id="headingAttendees">
            <h5 class="mb-0">
                <button type="button" class="btn btn-link" data-toggle="collapse" data-target="#collapseAttendees" aria-expanded="true" aria-controls="collapseAttendees">
                    Attendees
                </button>
                <button type="button" onclick="addAttendeesForm()" class="btn btn-success"><i class="fas fa-plus"></i></button>
            </h5>
        </div>

        <div id="collapseAttendees" class="collapse show" aria-labelledby="headingAttendees">
            <div class="card-body" id="Attendees">
                @{
                    int i = 0;
                    foreach (var item in Model.Attendees)
                    {
                        i++;
                        <div id="gen-item-@i">
                            <div class="text-danger">@item.Error</div>
                            <div class="form-group row">
                                <div class="col-md-2">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" name="Emails" value="@item.Email" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-2">
                                    <label>Is Resource</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" name="Resources" value="@item.Resource" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <label>Is Optional</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" name="Optionals" value="@item.Optional" class="form-control" />
                                </div>
                            </div>
                        <button type="button" onclick="deleteElement(@i)" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                        </div>
                    }
                    ViewBag.AttendeesNum = i + 1;
                }
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-5 offset-2">
            <div class="btn-group">
                <input type="submit" value="Save changes" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
</form>


@section scripts
{
    <script>
        window.countAttendees = @ViewBag.AttendeesNum;
        function addAttendeesForm() {
            let i = window.countAttendees++;
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetAttendeesForm")",
                contentType: "application/json; charset=utf-8",
                cache: false,
                datatyype: "json",
                success: function (data) {
                    items = '<div id="gen-item-'+i+'">';
                    items += data;
                    items += '<button type="button" onclick="deleteElement('+i+')" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>';
                    items += '</div>';
                    $("#Attendees").append(items);
                },
                error: function () {
                    alert("Dynamic content load failed");
                }
            });
        };
        function deleteElement(i) {
            $('#gen-item-' + i).remove();
        };
    </script>
}
