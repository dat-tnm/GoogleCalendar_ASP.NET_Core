@model GoogleCalendar_MVC.Models.ViewModels.EventVM
@{
    ViewBag.Title = "Create new Event";
}

<br />
<h2 class="text-info">Create new Event</h2>
<br />

<form method="post" asp-action="Create">
    <div class="backgroundWhiteBorder">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Summary"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Summary" class="form-control" />
            </div>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Start"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Start" class="form-control" />
            </div>
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="End"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="End" class="form-control" />
            </div>
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="EndTimeUnspecified"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="EndTimeUnspecified" type="checkbox" class="form-control" />
            </div>
            <span asp-validation-for="EndTimeUnspecified" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="btn-group">
                    <input type="submit" value="Save and create" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
