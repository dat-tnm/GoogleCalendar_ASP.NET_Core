@model GoogleCalendar_MVC.Models.ViewModels.Attendee
<div class="form-group row">
    <div class="col-md-4">
        <label>Email</label>
    </div>
    <div class="col-md-8">
        <input type="text" name="Emails" value="@Model.Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">
        <label>Is Resource</label>
    </div>
    <div class="col-md-3">
        <input type="checkbox" name="Resources" value="@Model.Resource" class="form-control" />
    </div>
    <div class="col-md-3">
        <label>Is Optional</label>
    </div>
    <div class="col-md-3">
        <input type="checkbox" name="Optionals" value="@Model.Optional" class="form-control" />
    </div>
</div>
